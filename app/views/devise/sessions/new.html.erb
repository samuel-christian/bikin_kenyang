<div class="body">
  <div class="container">
    <div class="login-form-wrapper">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'form-horizontal login-form'}) do |f| %>
        <%= devise_error_messages! %>
        <div class="text-center login-intro">
          <h3>Masuk</h3>
          <p>Selamat datang di BikinKenyang, silahkan isi data anda.</p>
        </div>
        <hr/>
        <div class=" form-group control-group">
          <%= f.label :email, :class => 'control-label col-sm-offset-1 col-sm-2' %>
          <div class="controls col-sm-7 col-sm-offset-1">
            <%= f.email_field :email, autofocus: true, :id => 'input-email', :class => 'form-control' %>
          </div>
        </div>
        <div class="form-group control-group">
          <%= f.label :password, :class => 'control-label col-sm-offset-1 col-sm-2' %>
          <div class="controls col-sm-7 col-sm-offset-1">
            <%= f.password_field :password, autocomplete: "off", :id => 'input-password', :class => 'form-control' %>
          </div>
        </div>
        <% if devise_mapping.rememberable? -%>
        <div class="form-group control-group">
          <div class="controls col-sm-1 col-sm-offset-1 remember-me-checkbox">
            <%= f.check_box :remember_me, :class => 'form-control' %>
          </div>
          <%= f.label :remember_me, :class => 'control-label col-sm-4 remember-me-label' %>
        </div>
        <% end %>
        <hr/>
        <div class="form-actions">
          <%= f.submit "Masuk", :class => 'btn btn-primary' %>         
        </div>
        <div class="form-actions">
           <%= render "devise/shared/links" %>
        </div>
        
      <% end %>
    </div>
  </div>
</div>