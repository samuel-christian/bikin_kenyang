<div class="body">
	<div class="container">
		<%= form_for @user, :html => {:class => 'form-horizontal'} do |f| %>
			<div class=" form-group control-group">
     
        <!-- </div> -->
        <!-- <div class="controls col-sm-8">
          <%= f.email_field :email, autofocus: true, :id => 'input-email', :class => 'form-control', :disabled => :true %>
        </div> -->
       <div class="text-center register-intro">
          <h3>Edit Profile</h3>
        </div>

      </div>
        <div class=" form-group control-group">
          <%= f.label :first_name, 'Nama Depan', :class => 'control-label col-sm-3' %>
          <div class="controls col-sm-8">
            <%= f.text_field :first_name, :class => 'form-control', :id => 'input-nama-depan' %>
          </div>
        </div>
        <div class=" form-group control-group">
          <%= f.label :first_name, 'Nama Belakang', :class => 'control-label col-sm-3' %>
          <div class="controls col-sm-8">
            <%= f.text_field :last_name, :class => 'form-control', :id => 'input-nama-belakang' %>
          </div>
        </div>
        <div class=" form-group control-group">
          <%= f.label :address, 'Alamat', :class => 'control-label col-sm-3' %>
          <div class="controls col-sm-8">
            <%= f.text_area :address, :class => 'form-control', :id => 'input-address' %>
          </div>
        </div>
        <div class=" form-group control-group">
          <%= f.label :phone_number, 'No Telepon', :class => 'control-label col-sm-3' %>
          <div class="controls col-sm-8">
            <%= f.telephone_field :phone_number, :class => 'form-control', :id => 'input-phone' %>
          </div>
        </div>
        <div class="form-group control-group">
          <%= f.label :birthday, 'Tanggal Lahir', :class => 'control-label col-sm-3' %>
          <div class="controls col-sm-8">
            <%= f.date_field :birthday, :class => "form-control date" %>
          </div>
        </div>
        
      <hr/>
      <div class="form-actions">
        <div class="row">
          <div class="col-md-6">
            <%= f.submit "Simpan", :class => 'btn btn-primary' %>
            <%= link_to "Kembali", user_path(@user), :class => 'btn btn-danger' %>
          </div>
        </div>
      </div>
		<% end %>
    <%= @user.inspect %>
	</div>
</div>