<%= link_to "Add Menu", new_admin_menu_path, :class => "btn btn-primary" %>
<table class="table table-bordered table-striped" style="margin-top:10px;">
	<thead>
		<tr>
			<% @column_names.each do |column| %>
				<th><%= column.capitalize %></th>
			<% end %>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		<% @menus.each do |menu| %>
			<tr>
				<!--<td><%#= menu.id %></td>-->
				<td><%= menu.name %></td>
				<td>Rp. <%= number_with_delimiter(menu.price.to_i, :delimiter => '.') %>,-</td>
				<td><%= image_tag menu.image.url.to_s, :style => "width:20%;height:20%;" %></td>
				<td><%= to_weekday(menu.day) %></td>
				<td>
					<%= link_to admin_menu_path(menu), :title => "View", :class => "btn btn-primary" do %>
						<span class="glyphicon glyphicon-eye-open"></span>
					<% end %>
					<%= link_to edit_admin_menu_path(menu), :title => "Edit", :class => "btn btn-info" do %>
						<span class="glyphicon glyphicon-edit"></span>
					<% end %>
					<%= link_to admin_menu_path(menu), :method => :delete, :"data-confirm" => "Are you sure?", :title => "Delete", :class => "btn btn-danger" do %>
						<span class="glyphicon glyphicon-trash"></span>
					<% end %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>